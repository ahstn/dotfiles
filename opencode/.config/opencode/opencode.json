{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "disabled_providers": [
    "alibaba",
    "azure",
    "v0",
    "xai",
    "zai",
    "lmstudio",
    "deepseek",
    "moonshoot-ai"
  ],
  "formatter": {
    "prettier": {
      "disabled": true
    }
  },
  "provider": {
    "litellm": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LiteLLM",
      "options": {
        "baseURL": "https://localhost:4000/v1"
      },
      "models": {
        "claude-sonnet-4": {}
      }
    }
  },
  "mcp": {
    "context7": {
      "enabled": true,
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"]
    },
    "fetch": {
      "enabled": true,
      "type": "local",
      "command": ["uvx", "mcp-server-fetch"]
    }
  },
  "permission": {
    "bash": {
      "rm -rf*": "deny",
      "git status": "allow",
      "git diff": "allow",
      "npm run build": "allow",
      "ls": "allow",
      "pwd": "allow"
    }
  }
}
