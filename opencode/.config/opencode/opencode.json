{
  "$schema": "https://opencode.ai/config.json",
  // "enabled_providers": ["openrouter", "openai", "github-copilot", "opencode"],
  "autoupdate": "notify",
  "server": {
    "port": 34521,
    "hostname": "0.0.0.0"
  },
  "formatter": {
    "prettier": {
      "disabled": true
    }
  },
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    },
    "diff_style": "auto"
  },
  "provider": {
    "litellm": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LiteLLM",
      "options": {
        "baseURL": "https://localhost:4000/v1"
      },
      "models": {
        "claude-sonnet-4": {}
      }
    },
    "minimax": {
      "npm": "@ai-sdk/anthropic",
      "options": {
        "baseURL": "https://api.minimax.io/anthropic/v1"
      },
      "models": {
        "MiniMax-M2": {
          "name": "MiniMax-M2"
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "enabled": true,
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"]
    },
    "fetch": {
      "enabled": true,
      "type": "local",
      "command": ["uvx", "mcp-server-fetch"]
    }
  },
  "permission": {
    "bash": {
      "rm -rf*": "deny",
      "git status": "allow",
      "git diff": "allow",
      "npm run build": "allow",
      "ls": "allow",
      "pwd": "allow"
    }
  }
}
